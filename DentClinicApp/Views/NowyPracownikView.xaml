<local:JedenViewBase x:Class="DentClinicApp.Views.NowyPracownikView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DentClinicApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="white" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- Imię -->
        <Label Grid.Column="0" Grid.Row="0" Margin="0,8,0,8" Content="Imie"/>
        <TextBox Grid.Column="1" Grid.Row="0" Margin="0,8,0,8" Text="{Binding Path=Imie, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Nazwisko -->
        <Label Grid.Column="0" Grid.Row="1" Margin="0,8,0,8" Content="Nazwisko"/>
        <TextBox Grid.Column="1" Grid.Row="1" Margin="0,8,0,8" Text="{Binding Path=Nazwisko, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Stanowisko -->
        <Label Grid.Column="0" Grid.Row="2" Margin="0,8,0,8" Content="Stanowisko"/>
        <ComboBox Grid.Column="1" Grid.Row="2" Margin="0,8,0,8" 
                  ItemsSource="{Binding StanowiskoItems}"
                  DisplayMemberPath="Value"
                  SelectedValuePath="Key"
                  SelectedValue="{Binding Path=IdStanowiska, Mode=TwoWay}" />

        <!-- Data zatrudnienia -->
        <Label Grid.Column="0" Grid.Row="3" Margin="0,8,0,8" Content="Data zatrudnienia"/>
        <DatePicker Grid.Column="1" Grid.Row="3" Margin="0,8,0,8" SelectedDate="{Binding Path=DataZatrudnienia, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Telefon -->
        <Label Grid.Column="0" Grid.Row="4" Margin="0,8,0,8" Content="Telefon"/>
        <TextBox Grid.Column="1" Grid.Row="4" Margin="0,8,0,8" Text="{Binding Path=Telefon, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- E-mail -->
        <Label Grid.Column="0" Grid.Row="5" Margin="0,8,0,8" Content="E-mail"/>
        <TextBox Grid.Column="1" Grid.Row="5" Margin="0,8,0,8" Text="{Binding Path=Email, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Zwolniony -->
        <Label Grid.Column="0" Grid.Row="6" Margin="0,8,0,8" Content="Zwolniony"/>
        <CheckBox Grid.Column="1" Grid.Row="6" Margin="0,8,0,8" 
                  IsChecked="{Binding Path=CzyZwolniony, Mode=TwoWay}" />

        <!-- Data zwolnienia -->
        <StackPanel Grid.Column="1" Grid.Row="7" Orientation="Horizontal" Margin="0,8,0,8" 
                    Visibility="{Binding CzyZwolniony, Converter={StaticResource BoolToVisibilityConverter}}">
            <Label Content="Data zwolnienia:" Margin="0,0,5,0"/>
            <DatePicker SelectedDate="{Binding Path=DataZwolnienia, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
    </Grid>
</local:JedenViewBase>
