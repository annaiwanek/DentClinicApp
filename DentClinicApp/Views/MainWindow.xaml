<Window x:Class="DentClinicApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DentClinicApp"
        Title="DentClinicApp" Height="450" Width="800"
        xmlns:vm="clr-namespace:DentClinicApp.ViewModels"
        DataContext="{DynamicResource MainWindowViewModel}">

    <Window.Resources>
        <ResourceDictionary Source="MainWindowResources.xaml" />
    </Window.Resources>

    <DockPanel>
        <!-- Górne menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Plik">
                <MenuItem Header="Wyjdź" Command="{Binding CloseCommand}" />
            </MenuItem>
            <MenuItem Header="Pomoc">
                <MenuItem Header="O aplikacji" />
            </MenuItem>
        </Menu>

        <!-- Boczne menu nawigacyjne -->
        <StackPanel DockPanel.Dock="Left" Background="LightBlue" Width="200">
            <Button Content="Strefa Pacjenta" Command="{Binding SwitchToPacjentSectionCommand}" Margin="5" />
            <Button Content="Strefa Pracownika" Command="{Binding SwitchToPracownikSectionCommand}" Margin="5" />
        </StackPanel>

        <!-- Dynamiczny obszar -->
        <ContentControl Content="{Binding ActiveSection}" Margin="10" />
    </DockPanel>

</Window>
