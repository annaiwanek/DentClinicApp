<UserControl x:Class="DentClinicApp.Views.WszyscyPacjenciView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#FAFAFA" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <TextBlock Text="Lista Pacjentów" FontSize="20" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10" />

        <!-- Tabela z listą pacjentów -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Pacjenci}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="L.p." Binding="{Binding IdPacjenta}" Width="50" />
                <DataGridTextColumn Header="Imię" Binding="{Binding Imie}" />
                <DataGridTextColumn Header="Nazwisko" Binding="{Binding Nazwisko}" />
                <DataGridTextColumn Header="Telefon" Binding="{Binding Telefon}" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
